doctype html
html
    head(lang='en')
        meta(charset='UTF-8')
        title
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
        link(rel='stylesheet', href='../dist/botany.css')
    body
        ul.botany(class=theme)
            li List 1
                ul
            li List 2
                ul
            li List 3
                ul

        button.randomize(type="button") Add Random Nodes
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
        script(src='../dist/botany.min.js')
        script.
            $(function () {
                //Initialize the tree
                $(".botany").botany();

                //Code for adding random nodes (just used for this example)
                var counter = 0;
                function randomize(){
                    for (var i =0; i <= 5; i++) {
                        var lists = $(".botany ul");
                        var index = Math.floor(Math.random() * lists.length);
                        $(lists[index]).append("<li class='open'> Inserted " + counter++ + "<ul></ul></li>");
                    }
                }

                $(".randomize").click(randomize);
                randomize();
            });